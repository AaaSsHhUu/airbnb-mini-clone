<% layout("./layouts/boilerplate.ejs") -%>

<body>
    <h2>Add new Place</h2>
    <form action="/listings" method="post">
        <div>
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" class="form-control" id="title">
        </div>
        
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" cols="30" rows="10" id="description"></textarea>
        </div>
        <div>
            <label for="image" class="form-label">Image URL</label>
            <input type="text" name="listing[image]" id="image" class="form-control">
        </div>
        <div>
            <label for="price" class="form-label">Price</label>
            <input type="text" name="listing[price]" id="price" class="form-control">
        </div>
        
        <div>
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" id="location" class="form-control">
        </div>

        <div>
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[location]" id="country" class="form-control">
        </div>
        <br>
        <button class="btn btn-dark">Add Place</button>
    </form>
</body>